<!DOCTYPE html>
<html lang="en" dir="ltr">

<head>
  <meta charset="utf-8">
  <title>To Do List</title>
  <link rel="stylesheet" href="/css/styles.css">
</head>

<body>
  <div class="box" id="heading">
    <h1> <%= heading %> </h1>

  </div>
  <div class="box">



    <%newtasks.forEach(function(newtask){%>
      <form class="" action="/delete" method="post">

        <div class="item">
          <input type="checkbox" name="checkbox" value="<%=newtask._id%>" onChange="this.form.submit()">
          <input type="hidden" name="typeTask" value="<%=typeList%>">
          <p> <%= newtask.name %> </p>
        </div>
      </form>
    <%});%>

    <form class="item" action="/" method="post">

      <input type="text" name="task" placeholder="new item">
      <button type="submit" name="typeTask"  value=  "<%=typeList%>"    > + </button>


    </form>
  </div>

</body>

</html>
